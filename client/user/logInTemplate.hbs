<div class="login-page">
  
  <form id="logInForm">
    <div id="errorMsg"></div>

    <div class="input-line">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" required maxlength="25" />
    </div>

    <div class="input-line">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" required maxlength="1000" />
    </div>

    <div class="controls">
      <button type="button" id="logIn" class="primary-button">Log In</button>
    </div>
  </form>

  <div class="signup-div">
    <p class="or">or</p>
    <div class="controls">
      <a class="primary-button" href="/signup">Sign Up</a>
    </div>
    <p>
      <em>Races Run</em> is free, non-commercial, and private by default. If you would like to record your race results, please sign up.
    </p>
  </div>

</div>
