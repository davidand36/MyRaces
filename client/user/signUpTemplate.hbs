<div class="signup-page">
  <form id="signUpForm">
    <div id="errorMsg"></div>

    <div class="input-line">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" required maxlength="25" />
    </div>

    <div class="input-line">
      <label for="fullName">Full name</label>
      <input type="text" name="fullName" id="fullName" required maxlength="100" />
    </div>

    <div class="input-line">
      <label for="gender">Gender</label>
      <select name="gender" id="gender">
        <option value=""></option>
        <option value="female">female</option>
        <option value="male">male</option>
        <option value="non-binary">non-binary</option>
      </select>
    </div>

    <div class="input-line">
      <label for="dateOfBirth">Date of birth</label>
      <input type="date" name="dateOfBirth" id="dateOfBirth" />
    </div>

    <div class="input-line">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" maxlength="250" />
    </div>

    <div class="input-line">
      <label for="visibility">Visibility</label>
      <select name="visibility" id="visibility">
        <option value="public">Public</option>
        <option value="users">Other users</option>
        <!--<option value="friends">Friends</option>-->
        <option value="private" selected>Private</option>
      </select>
    </div>

    <div class="input-line">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" required maxlength="1000" />
      <button type="button" id="showHidePassword" class="inline-button">Show</button>
    </div>

    <div class="controls">
      <a href="/" class="secondary-button">Cancel</a>
      <button type="button" id="signUp" class="primary-button">Sign Up</button>
    </div>
  </form>
</div>
